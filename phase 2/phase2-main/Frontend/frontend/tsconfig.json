{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types/", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.tsx"]
}
